<div class="card{% if card.class %} {{ card.class }}{% endif %}">
  <div class="card-img-top">
    <div class="card-img" style="background-image: url({{ card.image }})"></div>
  </div>
  <div class="card-body">
    <div class="card-content">
      {% if card.category %}
      <span class="card-category">
        {{ card.category }}
      </span>
      {% endif %}
      <h4 class="card-title">
        {{ card.title }}
      </h4>
      <p class="card-text">
        {% if card.icon %}
        <i class="card-icon fas fa-{{ card.icon }}"></i>
        {% endif %}
        {{ card.text }}
      </p>
    </div>
    {% if card.linkText %}
    <div class="{{ "card-button-container" if card.linkSecondaryText }}">
      {% if card.linkSecondaryText %}
      <a href="{{ card.linkSecondary }}" class="btn btn-outline-primary">{{ card.linkSecondaryText }}</a>
      {% endif %}
      <a href="{{ card.link }}" class="btn btn-primary">{{ card.linkText }}</a>
    </div>
    {% else %}
    <a href="{{ card.link }}" class="card-button">
      <span class="button-icon">
        <i class="fas fa-arrow-right"></i>
      </span>
      <span class="button-hidden-text">Go</span>
    </a>
    {% endif %} 
    {% if card.hover %}
    <div class="card-hover">
      <svg class="card-hover-svg" viewBox="0 0 400 25">
        <path class="card-hover-box" d="M400,15.27S342.28,0,200,0,0,15.27,0,15.27V25H400Z" />
      </svg>
    </div>
    {% endif %}
  </div>
  {% if card.badge %}
  <div class="card-badge">
    <i class="card-badge-icon fas fa-{{ card.badge }}"></i>
  </div>
  {% endif %}
</div>