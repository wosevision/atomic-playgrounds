{% macro renderContentBlock(block) %}
<section class="content-block {{ block.theme }}">
  <div class="container">
    <a class="anchor" id="{{ block.title|slug }}"></a>
    {% if block.modules %}
      {% for module in block.modules %}
        {% include "modules/" + module.type + ".njk" %}
      {% endfor %}
    {% endif %}
  </div>
</section>
{% endmacro %}
