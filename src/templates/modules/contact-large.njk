<div class="article row">
	<div class="col-12">
    {% if module.text %}<p>{{ module.text }}</p>{% endif %}
    <form action="" method="post">
      <div class="form-row">
        <div class="form-group col-md-4">
          <div class="form-container-underline">
            <input type="text" class="form-control form-control-underline" name="firstname" id="firstname">
            <div class="form-control-decor"></div>
            <label for="firstname" class="form-control-label">First name</label>
          </div>
        </div>
        <div class="form-group col-md-4">
          <div class="form-container-underline">
            <input type="text" class="form-control form-control-underline" name="lastname" id="lastname">
            <div class="form-control-decor"></div>
            <label for="lastname" class="form-control-label">Last name</label>
          </div>
        </div>
        <div class="form-group col-md-4">
          <div class="form-container-underline">
            <input type="text" class="form-control form-control-underline" name="email" id="email">
            <div class="form-control-decor"></div>
            <label for="email" class="form-control-label">Email</label>
          </div>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-4">
          <div class="form-container-underline">
            <input type="text" class="form-control form-control-underline" name="phone" id="phone">
            <div class="form-control-decor"></div>
            <label for="phone" class="form-control-label">Phone number</label>
          </div>
        </div>
        <div class="form-group col-md-8">
          <div class="form-container-underline">
            <input type="text" class="form-control form-control-underline" name="address" id="address">
            <div class="form-control-decor"></div>
            <label for="address" class="form-control-label">Address</label>
          </div>
        </div>
      </div>
      <div class="form-row">
        {% if module.extraFields %}
          <div class="col-lg-7 col-xl-6">
            <div class="form-row">
              <div class="form-group col-md-6">
                <div class="form-container-underline">
                  <input type="text" class="form-control form-control-underline" name="howwecanhelp" id="howwecanhelp">
                  <div class="form-control-decor"></div>
                  <label for="howwecanhelp" class="form-control-label">How we can help</label>
                </div>
              </div>
              <div class="form-group col-md-6">
                <div class="form-container-underline">
                  <input type="text" class="form-control form-control-underline" name="build" id="build">
                  <div class="form-control-decor"></div>
                  <label for="build" class="form-control-label">New build</label>
                </div>
              </div>
              <div class="form-group col-md-6">
                <div class="input-group form-container-underline">
                  <input type="text" class="form-control form-control-underline" name="sqfootage" id="sqfootage">
                  <div class="form-control-decor"></div>
                  <label for="sqfootage" class="form-control-label">Estimated Square Footage</label>
                  <div class="input-group-append">
                    <span class="input-group-text">sq<sup>2</sup></span>
                  </div>
                </div>
              </div>
              <div class="form-group col-md-6">
                <div class="input-group form-container-underline">
                  <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                  </div>
                  <input type="text" class="form-control form-control-underline" name="budget" id="budget">
                  <div class="form-control-decor"></div>
                  <label for="budget" class="form-control-label">Estimated Budget</label>
                </div>
              </div>
            </div>
          </div>
        {% endif %}
        <div class="form-group {{ "col-lg-5 col-xl-6" if module.extraFields else "col-12" }}">
          <div class="form-container-underline">
            <textarea class="form-control form-control-underline" id="comments" rows="3" style="height: 128px"></textarea>
            <div class="form-control-decor"></div>
            <label for="comments" class="form-control-label">Comments</label>
          </div>
        </div>
      </div>
      <div class="form-group text-right">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>
